
<div class="admin-dashboard">
  <h1>🔧 Admin Paneli</h1>

  <div class="stats">
    <div class="stat-box">
      <h2><%= Course.count %></h2>
      <p>Toplam Kurs</p>
    </div>
    <div class="stat-box">
      <h2><%= User.count %></h2>
      <p>Kullanıcı Sayısı</p>
    </div>
    <div class="stat-box">
      <h2><%= Message.count %></h2>
      <p>Mesaj Sayısı</p>
    </div>
  </div>

  <div class="panel-links">
   <%= link_to "📚 Tüm Kurslar", courses_path %>
   <%= link_to "🏠 Ana Sayfa", root_path %>
   <%= link_to "📨 Mesaj Kutusu", messages_path %>
  </div>
</div>

